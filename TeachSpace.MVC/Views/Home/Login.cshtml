<!DOCTYPE html>
<html>
<head>
    <link href="~/Content/css/Register.css" rel="stylesheet" />
    <script defer src="~/Content/Js/Login.js"></script>
</head>
<body>
    <div class="container">
        <form id="signin" class="form">
            <h1>Login</h1>

            <div class="form-field">
                <label for="txtEmail">Email:</label>
                <input type="text" name="email" id="txtEmail" placeholder="Enter a Email" autocomplete="off">
                <small></small>
            </div>

            <div class="form-field">
                <label for="txtPassword">Password:</label>
                <input type="password" name="password" id="txtPassword" placeholder="Enter a Password" autocomplete="off">
                <small></small>
            </div>
            <p></p>
            <div class="form-field">
                <input type="submit" id="txtlogin" class="btn btn-success btn-format" value="Login">
            </div>
            <p></p>
            Do not have an Account?
            @Html.ActionLink("Signup here", "Register", "Home", new { area = "" }, null)
        </form>
    </div>
    <div id="validation-success"></div>

</body>
</html>